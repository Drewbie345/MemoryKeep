<div class="pure-g-r"> 
  <div class="pure-u-11-24"><h2>Tell Your Story. Share Your Memories.</h2></div>
</div>

<div id="signin">
  <p id="close1">X</p>
  <h3>Welcome!</h3>
  <%= form_for(resource, :as => resource_name,
                :url => session_path(resource_name),
                :html => {:id => "sign_in_user", :class => "pure-form pure-form-stacked"},
                :format => :json,
                :remote => true ) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    <%= f.submit "Login", {:class => "pure-button pure-button-primary"} %>
  <% end %>

  <a href="/users/new"><p>Need an account?</p></a>
</div>

<div id="create_account">
  <p id="close2">X</p>
  <h3>Welcome!</h3>
  <%= form_for(resource, :as => resource_name,
                :url => registration_path(resource_name),
                :html => {:id => "sign_up_user", :class => "pure-form pure-form-aligned"},
                :format => :json,
                :remote => true ) do |f| %>
    <%= devise_error_messages! %>
    <div class="pure-control-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="pure-control-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="pure-control-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="pure-control-group">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="pure-control-group">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="pure-control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="pure-control-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit "Sign Up", {:class => "pure-button pure-button-primary"} %>
  <% end %>
</div>