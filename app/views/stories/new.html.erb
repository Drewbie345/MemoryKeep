<div class="pure-g-r">
    <div class="pure-u-4-24"></div>
    <div class="pure-u-16-24">
      <div id="record-story">
        
        <h3>Share your story.</h3>
        <div id="status">Test</div>
        <div id="results">
          <span id="final_span" style="color:black"></span>
          <span id="interim_span" style="color:gray"></span>
        </div>
        <a id="record" href="#">
          <%= image_tag "/assets/mic.gif" %>
        </a>    
        <br/>
        
        <form class="pure-form pure-form-aligned add-story">
    
          <div class="pure-control-group">
              <label for="name">Story Title</label>
              <input id="name" type="text" placeholder="Give your story a name">
          </div>

          <div class="pure-control-group">
              <label for="keyword">Keyword</label>
              <input id="keyword" type="text" placeholder="Keyword">
          </div>

          <div class="pure-control-group">
              <label for="date">Date</label>
              <input id="date" type="text" placeholder="When did the story happen?">
          </div>

          <div class="pure-control-group">
              <label for="where">Where</label>
              <input id="where" type="text" placeholder="Where did the story happen?">
          </div>

          <div class="pure-controls">
              <label for="cb" class="pure-checkbox">
                  <input id="cb" type="checkbox"> I've read the terms and conditions
              </label>

              <button type="submit" class="pure-button pure-button-primary">Submit</button>
          </div> 
       </div>
    </div>
    <div class="pure-u-4-24"></div>
</div>